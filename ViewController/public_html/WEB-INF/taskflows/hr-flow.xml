<?xml version="1.0" encoding="windows-1252" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="hr-flow">
    <default-activity>overview</default-activity>
    <data-control-scope>
      <shared/>
    </data-control-scope>
    <view id="overview">
      <page>/WEB-INF/pages/overview.jsf</page>
    </view>
    <view id="editEmployee">
      <page>/WEB-INF/pages/editEmployee.jsf</page>
    </view>
    <method-call id="commit">
      <method>#{bindings.Commit.execute}</method>
      <outcome>
        <fixed-outcome>commit</fixed-outcome>
      </outcome>
    </method-call>
    <method-call id="rollback">
      <method>#{bindings.Rollback.execute}</method>
      <outcome>
        <fixed-outcome>rollback</fixed-outcome>
      </outcome>
    </method-call>
    <control-flow-rule id="__1">
      <from-activity-id>overview</from-activity-id>
      <control-flow-case id="__2">
        <from-outcome>edit</from-outcome>
        <to-activity-id>editEmployee</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__6">
      <from-activity-id>editEmployee</from-activity-id>
      <control-flow-case id="__7">
        <from-outcome>speichern</from-outcome>
        <to-activity-id>commit</to-activity-id>
      </control-flow-case>
      <control-flow-case id="__8">
        <from-outcome>abbrechen</from-outcome>
        <to-activity-id>rollback</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__9">
      <from-activity-id>rollback</from-activity-id>
      <control-flow-case id="__10">
        <from-outcome>rollback</from-outcome>
        <to-activity-id>overview</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__11">
      <from-activity-id>commit</from-activity-id>
      <control-flow-case id="__12">
        <from-outcome>commit</from-outcome>
        <to-activity-id>overview</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
  </task-flow-definition>
</adfc-config>
